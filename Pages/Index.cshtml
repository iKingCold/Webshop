@page
@model IndexModel
@inject Webshop.Data.AccessControl accessControl
@{
    ViewData["Title"] = "Home page";
}

<h1 class="home-page-welcome">Calås & Flink's Fiskerihörna!</h1>
<h2 class="random-products">Utvalda produkter</h2>
<div class="container">
    @foreach (var product in Model.Products)
    {
        <div class="bait-box">
            <a asp-page="/Webstore/Details" asp-route-id="@product.Id">
                <h3 class="product-name">@product.Name</h3>
                <img src="/Images/@product.Image" alt="bait image" class="product-image" />
                <p class="product-price">@(product.Price) :-</p>
            </a>
            <form method="post" asp-page="/webstore/Index" asp-page-handler="FastPurchase">
                <input type="hidden" name="id" value="@product.Id">
                <input type="submit" value="Köp" id="quick-purchase" />
            </form>
        </div>
    }
</div>

<style>
    html {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
    }

    h1 {
        text-align: center;
        margin-top: 50px;
        margin-bottom: 70px;
    }

    .random-products {
        text-align: center;
    }

    .container {
        max-width: 70%;
        margin: auto;
        margin-top: 30px;
        display: flex;
        flex-wrap: wrap;
        gap: 50px;
        align-items: center;
        justify-content: center;
    }

    .bait-box {
        display: flex;
        background: white;
        flex-direction: column;
        align-items: center;
        width: 250px;
        height: 250px;
        box-shadow: 0 0 4px black;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .bait-box:hover {
            transform: scale(1.1);
        }

        .bait-box .product-name {
            font-size: 15px;
            color: black;
        }

        .bait-box .product-price {
            font-size: 15px;
            font-weight: bold;
            color: red;
        }

    .product-image {
        max-width: 240px;
        height: 140px;
        margin: auto;
    }

    #quick-purchase {
        background-color: #ff6600;
        color: #fff;
        border: 1px solid #ddf;
        padding: 4px;
        border-radius: 5px;
        cursor: pointer;
    }


    input[type="text"] {
        height: 20px;
    }

    input[type="submit"] {
        width: 60px;
        padding: 3px;
        background-color: white;
        color: black;
        font-weight: bold;
    }

</style>

