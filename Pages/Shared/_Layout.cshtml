@using Webshop.Pages.Shared.Components.LoginMenu;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</head>
<body>
    <header>
        <environment names="Development">
            @await Component.InvokeAsync(nameof(FakeLoginMenu))
        </environment>
        <nav class="navbar-header">
            <ul class="navbar-list">
                <li class="store-list-item">
                    <div class="header-item start">
                        <a asp-page="/Index" class="header-item"><img src="/Images/home-v2.png" class="anchor-image"/>Hem</a>
                    </div>
                </li>
                <li class="store-list-item">
                    <div class="header-item center">
                        <a asp-page="/Webstore/Index" class="header-item" asp-route-pageId="1"><img src="/Images/store-v1.png" class="anchor-image" />Butik</a>
                    </div>
                </li>
                <li class="cart-list-item">
                    <div class="header-item end">
                        <a asp-page="/Webstore/Cart" class="header-item"><img src="/Images/shopping-cart-v2.png" class="anchor-image" />Varukorg</a>
                    </div>
                </li>
            </ul>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
</body>
</html>
<style>
    .navbar-list{
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 20px 60px;
        padding: 0;
    }

    .header-item {
        display: flex;
        align-items: center;
    }
    .start{
        justify-content: flex-start;
    }
    .center{
        justify-content: center;
    }
    .end{
        justify-content: flex-end;
    }

    .anchor-image {
        width: 40px;
        margin: 0 5px;
    }

    .cart-list-item, .store-list-item {
        flex: 1;
    }
    ul{
        list-style: none;
    }
    a{
        text-decoration: none;
    }
</style>