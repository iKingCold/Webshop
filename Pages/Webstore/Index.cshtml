@page
@model Webshop.Pages.Webstore.IndexModel
@{
    ViewBag.Title = "Beten";
}


<h3>@ViewBag.Title</h3>
<form>
    <p>
        <select asp-for="SelectedCategoryId" asp-items="Model.CategoryList">
            <option value="">All</option>
        </select>
        Sök fiskedrag: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Sök" />
        <a asp-page="/Webstore/Index">Rensa filter</a>
    </p>
</form>
<hr />
<div class="container">
    @foreach (var bait in Model.Products)
    {
        <a asp-page="/Webstore/Details" asp-route-id="@bait.Id">
            <div class="bait-box">
                @bait.Name)
                <img src="/Images/@bait.Image" alt="bait image" class="product-image" />
                @bait.Price) kr
            </div>
        </a>
    }
</div>


<style>
    html {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
    }

    .home-page-welcome {
        text-align: center;
    }

    a {
        text-decoration: none;
    }

    li {
        list-style-type: none;
    }

    .container {
        max-width: 70%;
        margin: auto;
        margin-top: 30px;
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        justify-content: space-around;
        align-items: center;
    }

    .bait-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 250px;
        height: 250px;
        box-shadow: 0 0 4px black;
        border-radius: 5px;
    }

    .product-image {
        max-width: 300px;
        height: 140px;
        margin: auto;
    }
</style>